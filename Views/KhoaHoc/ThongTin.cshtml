@{
    var khoaHoc = ViewBag.KhoaHoc;
    var videos = ViewBag.DanhSachVideo as List<Video_Site.Models.DanhSachVideo>;
}

<!DOCTYPE html>
<html>
<head>
    <title>@khoaHoc.TenKhoaHoc</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2>@khoaHoc.TenKhoaHoc</h2>
        <p>@khoaHoc.MoTa</p>
        <hr />

        <div class="row">
            @foreach (var v in videos)
            {
                var vidID = "";
                if(v.Link.Contains("v="))
                {
                    vidID = v.Link.Split("v=")[1];
                    if (vidID.Contains("&"))
                    {
                        vidID = vidID.Split("&")[0];
                    }
                }
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <iframe class="video-frame"
                                src="https://www.youtube.com/embed/@vidID"
                                title="YouTube video player"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                        </iframe>
                        <div class="card-body">
                            <h5 class="card-title text-truncate">@v.Link</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
